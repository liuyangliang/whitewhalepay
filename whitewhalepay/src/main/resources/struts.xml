<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 开启使用开发模式，详细错误提示 -->
	<constant name="struts.devMode" value="true" />
	<!-- 将对象交给spring管理 -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 指定资源编码类型 -->
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<!-- 指定每次请求到达，重新加载资源文件 -->
	<constant name="struts.i18n.reload" value="false" />
	<!-- 指定每次配置文件更改后，自动重新加载 -->
	<constant name="struts.configuration.xml.reload" value="false" />
	<!-- 默认后缀名 -->
	<constant name="struts.action.extension" value="action," />

	<package name="struts2" extends="struts-default">
	
		<action name="login">
			<result>WEB-INF/jsp/login.jsp</result>
		</action>
		
		<action name="merchantLogin" class="com.scut.whitewhalepay.action.MerchantAction" method="login">
			<result name="SUCCESS">WEB-INF/jsp/merchantIndex.jsp</result>
			<result name="FAIL">WEB-INF/jsp/login.jsp</result>
		</action>
		
		<action name="underwriterLogin" class="com.scut.whitewhalepay.action.UnderwriterAction" method="login">
			<result name="SUCCESS">WEB-INF/jsp/underwriterIndex.jsp</result>
			<result name="FAIL">WEB-INF/jsp/login.jsp</result>
		</action>
		
		<action name="signup">
			<result>WEB-INF/jsp/signup.jsp</result>
		</action>
		
		<action name="merchantSignup" class="com.scut.whitewhalepay.action.MerchantAction" method="signup">
			<result name="SUCCESS">WEB-INF/jsp/login.jsp</result>
			<result name="FAIL">WEB-INF/jsp/signup.jsp</result>
		</action>
		
		<action name="underwriterSignup" class="com.scut.whitewhalepay.action.UnderwriterAction" method="signup">
			<result name="SUCCESS">WEB-INF/jsp/login.jsp</result>
			<result name="FAIL">WEB-INF/jsp/signup.jsp</result>
		</action>
	
		<action name="merchantIndex">
			<result>WEB-INF/jsp/merchantIndex.jsp</result>
		</action>
		
		<action name="underwriterIndex">
			<result>WEB-INF/jsp/underwriterIndex.jsp</result>
		</action>
		
		<action name="merchantOrder">
			<result>WEB-INF/jsp/merchantOrder.jsp</result>
		</action>
		
		<action name="merchantInfo">
			<result>WEB-INF/jsp/merchantInfo.jsp</result>
		</action>
		
		<action name="underwriterOrder">
			<result>WEB-INF/jsp/underwriterOrder.jsp</result>
		</action>
		
		<action name="underwriterInfo">
			<result>WEB-INF/jsp/underwriterInfo.jsp</result>
		</action>
	</package>

</struts>